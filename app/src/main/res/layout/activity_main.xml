<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1Live Sender"
                android:id="@+id/textView3"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:inputType="textPersonName"
            android:id="@+id/editText"
            android:gravity="center"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:id="@+id/trackButton"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_row="24"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="30dp"
                android:text="Suchen"
                android:background="#6dcaff" />

            <Button
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:id="@+id/callButton"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:text="Anrufen"
                android:background="#6dcaff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong1time"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:clickable="false"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong1"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:textColor="#111111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong2time"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:clickable="false"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong2"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:textColor="#111111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong3time"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:clickable="false"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSong3"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:textColor="#111111" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
